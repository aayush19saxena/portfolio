<h1 id="page-title">Stuff I've Written</h1>

<div id="post-wrapper" class="skinny-wrapper">
	<% @posts.each do |post| %>
		<div class="post">
			<p class="date"><%= post.created_at.strftime('%A, %b %d') %></p>
			<h2><%= link_to post.title, post %></h2>
			<hr>
		</div>
	<% end -%>
</div>

<%= will_paginate @posts %>